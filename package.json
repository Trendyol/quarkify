{
  "name": "quarkify",
  "version": "0.4.3",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/react-transition-group": "^2.9.2",
    "classnames": "^2.2.6",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "react-transition-group": "^4.2.0",
    "typescript": "3.5.2"
  },
  "scripts": {
    "start": "start-storybook -p 9009 -s public",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-storybook": "build-storybook -s public",
    "coverage": "npm test -- --coverage --watchAll=false",
    "lint": "tslint -c tslint.json 'src/**/*.tsx'"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
        }
      }
    },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run coverage",
      "pre-push": "npm run lint && npm run coverage"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-viewport": "^5.1.9",
    "@storybook/react": "latest",
    "@types/classnames": "^2.2.8",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/faker": "^4.1.5",
    "@types/sinon": "^7.0.13",
    "@types/storybook__react": "^4.0.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "faker": "^4.1.0",
    "husky": "^3.0.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0"
  }
}
